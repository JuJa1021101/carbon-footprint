
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
}
.header {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}
.publish-btn {
  border: none;
  min-width: 70px;
  line-height: 1.8;
}
.status-selector {
  box-sizing: border-box;
}
.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.picker-text {
  color: #333;
}

