.container {
  min-height: 100vh;
  background-color: #f8f9fa;
}
.header {
  padding-top: 44px;
  padding-bottom: 12px;
  box-sizing: content-box;
}
.bg-green {
  background-color: #4CAF50;
}
.w-24px {
  width: 24px;
}
.knowledge-list .empty-tip {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
}
.knowledge-list .knowledge-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.knowledge-list .knowledge-item .knowledge-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.knowledge-list .knowledge-item .knowledge-header .knowledge-title {
  font-size: 32rpx;
  font-weight: bold;
}
.knowledge-list .knowledge-item .knowledge-header .more-btn {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.knowledge-list .knowledge-item .knowledge-header .icon-more {
  width: 16px;
  height: 16px;
}
.knowledge-list .knowledge-item .knowledge-content .knowledge-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  object-fit: cover;
}
.knowledge-list .knowledge-item .knowledge-content .knowledge-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.knowledge-list .knowledge-item .knowledge-content .knowledge-meta .knowledge-tags {
  display: flex;
  flex-wrap: wrap;
}
.knowledge-list .knowledge-item .knowledge-content .knowledge-meta .knowledge-tags .tag {
  font-size: 24rpx;
  color: #4CAF50;
  margin-right: 10rpx;
}
.knowledge-list .knowledge-item .knowledge-content .knowledge-meta .knowledge-date {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}
.back-icon {
  width: 18px;
  height: 18px;
}
.float-btn {
  position: fixed;
  bottom: 80px;
  right: 20px;
  width: 50px;
  height: 50px;
  z-index: 100;
}
.float-btn-inner {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background-color: #4CAF50;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24px;
}
.plus-text {
  color: white;
  font-size: 30px;
  font-weight: bold;
  line-height: 30px;
  text-align: center;
  margin-top: -2px;
  /* 轻微上移调整垂直位置 */
}

/* 工具类 */
